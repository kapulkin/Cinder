// TODO: import stylus reset
global-reset()

/*
* Colors
*/

cinder-orange = #c64b24
light-gray = #949494

gray-gradient-1 = linear-gradient(to bottom, #232524 0%,#292d2c 100%); /* W3C */
gray-gradient-2 = linear-gradient(to bottom, #232524 0%,#292d2c 100%); /* W3C */

left-col-width = 300px

body
	font-size: 16px;
	font-family: 'Open Sans', sans-serif;
	
a
	color: cinder-orange

#container
	
#top-primary
	background: gray-gradient-1
	
	// padding: 0 0 48px 0
	padding: 0 0 0 0
	margin: 0
	
	#main-nav
		height: 105px
		border-bottom: 2px solid white
		
	#sub-nav
		height: 50px

	.content
		// 
		height: 100%
		
	.branding
		//width: left-col-width
		height: 100%
		//float: left
		
	.col-right
		width: 100%
		height: 100%
	
	.navbar-header
		float:left
		position: relative
		width: 200px
		color: light-gray
		margin-top: 25px

		a.navbar-brand
			display: inline-block
			background: url('images/cinder_logo_bw.svg') no-repeat;
			background-size: 100%
			width: 151px
			height:50px
			
		.cinder-version
			display: inline-block
			position: absolute
			top: 26px
			left: 160px
			font-weight: bold
			font-size: 14px
			
	
	ul.nav
		position: relative
		list-style: none
		font-weight: bold
		height: 100%
		
		li
			position: relative
			display: inline-block
			height: 100%
			margin-right: 20px

			a
				display: inline-block
				color: white
				text-decoration: none
				padding-top: 50px
				
				&:hover
					color: cinder-orange
	
	#MSearchBox
		margin-top: 50px

#top-secondary
	background: gray-gradient-2
	height: 100%
	min-height: 250px

#container
	background: white
	height: auto
	padding-top: 40px
	font-size: 0.8em
	line-height: 1em

	p
		margin-bottom: 1em

	h1
		font-size: 1.5em
		font-family: 'Open Sans', sans-serif;
		font-weight: 300
		margin-bottom: 0.5em
		
	section
		margin-bottom: 1em
	
	.contents
		
		section
			
			li
				
				height: 100%
				padding: 10px
				
				&:nth-child(odd)
					background: #f8f8f8	
				
		p:last
			margin-bottom: 0
	


	

		

