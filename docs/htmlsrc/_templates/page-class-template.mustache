{{!-- START page-class-template.mustache ============= -->}}

<div class="row content-row">

  <!-- side nav -->
  <div id="side-nav" class="columns large-3" data-equalizer-watch="content">
    <h4>Namespaces:</h4>
    {{{ namespace_nav }}}
  </div>


  <!-- main content area -->
  <div class="columns large-9" data-equalizer-watch="content">

    <div id="container">

      <div class="content">

        <!-- content -->
        <h1 id="page-title">
            {{#is_template}}
            <strong>{{name}} &lt;{{template_def_name}}&gt; </strong> 
            Class Template
            {{/is_template}}

            {{^is_template}}
            <strong>{{name}}</strong> 
            Class
            {{/is_template}}
        </h1>
        
        {{> subnav }}
                    
        <!-- description and side bar -->
        <div id="description" class="row">
          <div id="description-prose" class="prose columns large-9">
            {{{description}}}
            {{{prefix}}}
          </div>

          <div class="side columns large-3">
            {{#side_nav_content}}
                {{> side-nav }}
            {{/side_nav_content}}
          </div>
        </div>
    </div>

    <hr/>

    <!-- show/hide buttons -->
    <div id="show-hide">
      <a class="show-all">Show All</a> | <a class="hide-all">Hide All</a>
    </div>
    
    <!-- contents -->
    <div class="reference-lists">

        <!-- public types -->
        {{#public_types.length}}
        {{#public_types}}
        <a name="{{anchor}}"></a>
        <section>
            <h2>Public Types</h2>
            <ul class="rows">
                {{#list}}
                    {{> function-markup }}
                {{/list}}
            </ul>
        </section>
        <hr/>
        {{/public_types}}
        {{/public_types.length}}

        <!-- enumerations -->
        {{#enumerations.length}}
        {{#enumerations}}
        <a name="{{anchor}}"></a>
        <section>
            <h2>Enumerations</h2>
            <ul class="rows">
                {{#list}}
                {{> enum-markup}}
                {{/list}}
            </ul>
        </section>
        <hr/>
        {{/enumerations}}
        {{/enumerations.length}}

        <!-- public member functions -->
        {{#public_functions.length}}
        <a name="{{public_functions.anchor}}"></a>
        <section>
            <h2>Public Member Functions</h2>
            {{! function -> "Public Member Functions", }}
            {{! interface -> "interface": "Instance Methods" }}
            <ul class="rows">
                {{#public_functions.list}}
                    {{> function-markup }}
                {{/public_functions.list}}
            </ul>
        </section>
        <hr/>
        {{/public_functions.length}}

        <!-- public member functions -->
        {{#public_static_functions.length}}
        <a name="{{public_static_functions.anchor}}"></a>
        <section>
            <h2>Static Public Member Functions</h2>
            <ul class="rows">
                {{#public_static_functions.list}}
                    {{> function-markup }}
                {{/public_static_functions.list}}
            </ul>
        </section>
        <hr/>
        {{/public_static_functions.length}}

        <!-- protected member functions -->
        {{#protected_functions}}
        {{#length}}
        <a name="{{anchor}}"></a>
        <section>
            <h2>Protected Member Functions</h2>
            <ul class="rows">
                {{#list}}
                    {{> function-markup }}
                {{/list}}
            </ul>
        </section>
        <hr/>
        {{/length}}
        {{/protected_functions}}

        <!-- protected attributes -->
        {{#protected_attrs}}
        {{#length}}
        <a name="{{anchor}}"></a>
        <section>
            <h2>Protected Attributes</h2>
            <ul class="rows">
                {{#list}}
                    {{> function-markup }}
                {{/list}}
            </ul>
        </section>
        <hr/>
        {{/length}}
        {{/protected_attrs}}

        <!-- friends -->
        {{#friends}}
        {{#length}}
        <a name="{{anchor}}"></a>
        <section>
            <h2>Friends</h2>
            <ul class="rows">
                {{#list}}
                    {{> function-markup }}
                {{/list}}
            </ul>
        </section>
        <hr/>
        {{/length}}
        {{/friends}}

    </div>

        
    </div> <!-- end #container -->

  </div>
</div> <!-- row -->