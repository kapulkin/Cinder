{{!-- START page-guide-template.mustache ============= -->}}

{{!-- main content area --}}
<div id="container" class="row content content-row">
    <div class="columns large-3">
        {{#subnav.length}}
        {{#subnav}}

            {{!-- Table of contents --}}
            <div>
                <ul>
                    {{#list}}
                    <li>
                        {{#link_data}}
                        <a href="{{link}}">{{label}}</a>
                        {{/link_data}}

                        {{!-- Subnav --}}
                        {{#length}}
                        <ul>
                            {{#subnav }}
                            <li>
                                {{#link_data}}
                                <a href="{{link}}">{{label}}</a>
                                {{/link_data}}

                                {{!-- Recursive subnav starts here --}}
                                {{>page-guide-navlist-template}}
                            </li>
                            {{/subnav }}
                        </ul>
                        {{/length}}
                        {{!-- End Subnav --}}

                    </li>
                    {{/list}}
                </ul>
            </div>
        {{/subnav}}
        {{/subnav.length}}
    </div>

    <div class="columns large-9 content" data-equalizer-watch="content">

        {{{ html_content }}}
  
    </div>

</div>